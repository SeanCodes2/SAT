                <h3>Sign Up Now!</h3>
                <p>Send us a message on our contact form and our recruiters will be in touch!</p>
                <a class="cta-btn" href="@Url.ActionLink("contact", "Home")">Contact Us</a>
            </div>
        </div>

    </div>
</section><!-- End Call To Action Section -->
