@{
    ViewData["Title"] = "About";

}


<!-- ======= About Section ======= -->
<section id="about" class="about">
    <div class="container" data-aos="fade-up">

        <div class="row gy-4" data-aos="fade-up">
            <div class="col-lg-4">
                <img src="assets/img/about.jpg" class="img-fluid" alt="">
            </div>
            <div class="col-lg-8">
                <div class="content ps-lg-5">
                    <h3>Greendale Community College </h3>
                    <h4>Streets Ahead</h4>
                    <p>
                        Greendale is located in beautiful Colorado. Home of the Humans, we welcome you to find a college thats better! Here, all are welcome to fulfill their educational needs. From Spanish to Biology, Ladders to Sailing, we have a class for everyone..  Welcome Home
                    </p>
                    <ul>
                        <li><i class="bi bi-check-circle-fill"></i> Open to enrollment to all age, gender, race, and species</li>
                        <li><i class="bi bi-check-circle-fill"></i> Home of the fabled Jeff Wingert</li>
                        <li><i class="bi bi-check-circle-fill"></i> Known for all classes, and awesome paintball wars</li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
</section><!-- End About Section -->

<!-- ======= Call To Action Section ======= -->
<section id="call-to-action" class="call-to-action">
    <div class="container" data-aos="fade-up">
        <div class="row justify-content-center">
