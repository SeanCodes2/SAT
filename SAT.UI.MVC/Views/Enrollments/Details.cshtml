@model SAT.DATA.EF.Models.Enrollment

@{
    ViewData["Title"] = "Details";
}

<div class="justify-content-center row">
    <div class="col-md-10 offset-1">

        <h1 class="mt-3">Details</h1>

        <div>
            <h4 class="mt-3">Enrollment</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EnrollmentDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EnrollmentDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ScheduledClass)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ScheduledClass.InstructorName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Student)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Student.Email)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.EnrollmentId">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
