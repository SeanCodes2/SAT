@model SAT.DATA.EF.Models.Enrollment

@{
    ViewData["Title"] = "Delete";
}

<div class="justify-content-center row">
    <div class="col-md-10 offset-1">

        <h1 class="mt-3">Delete Enrollment</h1>

        <h3 class="mt-3">Are you sure you want to delete this?</h3>
        <h4 class="text-danger">This Action Is PERMANENT!</h4>
        <div>
          
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EnrollmentDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EnrollmentDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ScheduledClass)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ScheduledClass.InstructorName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Student)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Student.FullName)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="EnrollmentId" />
                <h4 class="text-danger">This Action Is PERMANENT!</h4>
                <input type="submit" value="Delete" class="btn btn-danger" /> 
                <a asp-action="Index" class="btn btn-info">Back to List</a>
            </form>
        </div>
    </div>
</div>